@model EModernHouse.DataLayer.DTOs.Account.LoginUserDTO
@{
    ViewData["Title"] = "ورود";
}

@section scripts
{
    <partial name="_JqueryValidator"/>
    <partial name="_CaptchaScripts"/>
}
<main class="page-content">
    <div class="container">
        <div class="auth-wrapper">
            <div class="auth-form shadow-around">
                <div class="site-logo">
                    <a href="#">
                        <img src="./assets/images/logo.png" alt="logo">
                    </a>
                </div>
                <div class="auth-form-title">
                    ورود به سایت
                </div>
                <form asp-controller="Account" asp-action="Login" method="post">
                    <partial name="_CaptchaInput" />
                    <div class="form-element-row">
                        <label for="phone-number" class="label-element">شماره موبایل</label>
                        <div class="form-element-with-icon">
                            <input type="text" class="input-element" id="phone-number" asp-for="Mobile">
                            <i class="fad fa-mobile-alt"></i>
                        </div>
                        <span class="text-danger" asp-validation-for="Mobile"></span>
                    </div>
                    <div class="form-element-row">
                        <label for="password" class="label-element">
                            <span class="d-flex justify-content-between">
                                <span>کلمه عبور</span>
                                <a href="#" class="link--with-border-bottom">رمز عبور خود را فراموش کرده‌ام</a>
                            </span>
                        </label>
                        <div class="form-element-with-icon">
                            <input type="password" class="input-element" id="password" asp-for="Password">
                            <i class="fad fa-key-skeleton"></i>
                        </div>
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-element-row">
                        <label class="container-checkbox">
                            مرا به خاطر داشته باش
                            <input type="checkbox" asp-for="RememberMe">
                            <span class="checkmark"></span>
                        </label>
                    </div>

                    <div class="form-element-row text-left">
                        <button class="btn-element btn-info-element">
                            <i class="fad fa-sign-in-alt"></i>
                            ورود
                        </button>
                    </div>

                </form>
                <div class="auth-form-footer">
                    <span>رمز عبور خود را فراموش کردید؟</span>
                    <a href="forgot-pass" class="link--with-border-bottom">کلیک کنید</a>
                </div>
                <div class="auth-form-footer">
                    <span>کاربر جدید هستید؟</span>
                    <a href="/register" class="link--with-border-bottom">ثبت نام در خانه الکترونیک مدرن</a>
                </div>
            </div>
        </div>
    </div>
</main>