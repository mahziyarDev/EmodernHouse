@model EModernHouse.DataLayer.DTOs.Site.CreateSiteSettingDTO
@{
    ViewData["Title"] = "تنظیمات جدید";
}

@section script
{
    <script src="/js/ChangeImage.js"></script>
}
<div class="row">
    <form>
        <div class="col-md-9">
            <div class="widget">
                <div class="widget-header">
                    <span class="widget-caption">@ViewData["Title"]</span>
                </div>
                <div class="widget-body">
                    <div class="form-group">
                        <label>شماره تلفن</label>
                        <input type="text" asp-for="Phone" class="form-control" />
                        <span class="text-danger" asp-validation-for="Phone"></span>
                    </div>
                    <div class="form-group">
                        <label>شماره همراه</label>
                        <input type="text" asp-for="Mobile" class="form-control" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>

                    <div class="form-group">
                        <label></label>
                        <input type="text" asp-for="" class="form-control" />
                        <span class="text-danger" asp-validation-for=""></span>
                    </div>

                    <div class="form-group">
                        <label></label>
                        <input type="text" asp-for="" class="form-control" />
                        <span class="text-danger" asp-validation-for=""></span>
                    </div>

                    <div class="form-group">
                        <label></label>
                        <input type="text" asp-for="" class="form-control" />
                        <span class="text-danger" asp-validation-for=""></span>
                    </div>

                    <div class="form-group">
                        <label></label>
                        <input type="text" asp-for="" class="form-control" />
                        <span class="text-danger" asp-validation-for=""></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card text-center">
                <div class="card-header">
                    تصویر محصول
                </div>
                <div class="card-body">
                    <img id="imgPreviewProduct" class="img-thumbnail ImagePreviwe_Editprofile" src="" />
                </div>
                <div class="card-footer text-muted">
                    <label for="imageProduct" id="lable-Upload-Avatar" class="btn-upload">انتخاب عکس</label>
                    <input type="file" name="productImage" accept=".png,.jpg,.jpeg" id="imageProduct" class="input_Upload_file_Editprofile" />
                </div>
            </div>
        </div>
    </form>
</div>

