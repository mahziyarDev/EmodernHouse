@using EModernHouse.DataLayer.Entities.Product
@model EModernHouse.DataLayer.Entities.Product.ProductForShowIndex
@{
    ViewData["Title"] = "افزودن محصولات محبوب";
}

@section Styles
{
    <link rel="stylesheet" href="lib/EasyAutocomplete/easy-autocomplete.css" />
    <link rel="stylesheet" href="/lib/EasyAutocomplete/easy-autocomplete.themes.css" />
    <link rel="stylesheet" href="/lib/date-picker/kamadatepicker.min.css" />
}
@section script
{
    <script src="/lib/EasyAutocomplete/jquery.easy-autocomplete.min.js"></script>
    <script src="/lib/date-picker/kamadatepicker.min.js"></script>
    <script src="/lib/date-picker/kamadatepicker.holidays.js"></script>
    <script src="/Admin/js/custom.js"></script>

}



<form asp-area="Admin" asp-controller="Inventory" asp-action="AddProductPopular" method="post">
    <div class="col-lg-12 col-sm-12 col-xs-12">
        <div class="widget">
            <div class="widget-header bordered-bottom bordered-blue">
                <span class="widget-caption">@ViewData["Title"]</span>
            </div>
            <div class="widget-body">
                <input type="hidden" asp-for="ProductId" />
                <div>
                    <div class="form-group">
                        <label>سرچ نام محصول</label>
                        <input class="form-control" id="ProductName">
                    </div>
                    <div class="form-group">
                        <label>کدام دسته محبوب</label>
                        <select class="form-control" id="e1" style="width:100%;" tabindex="-1" class="select2-hidden-accessible" aria-hidden="true" asp-for="Priority" asp-items="@(Html.GetEnumSelectList<Priority>())"></select>
                    </div>


                    <button type="submit" class="btn btn-blue">ثبت</button>
                    <button class="btn btn-warning" asp-area="Admin" asp-controller="ProductDiscount" asp-action="GetDiscount">باز گشت به لیست</button>
                </div>
            </div>
        </div>
    </div>


</form>


