@model EModernHouse.DataLayer.DTOs.Account.EditUserDTO
@{
    ViewData["Title"] = "ویرایش کاربر";
}
@section script
{
    <partial name="_JqueryValidator" />

}
<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            <div class="widget">
                <div class="widget-header bordered-bottom bordered-blue">
                    <span class="widget-caption">@TempData["Title"]</span>
                </div>
                <div class="widget-body">
                    <div>
                        <form asp-area="Admin" asp-controller="User" asp-action="EdtiUserForAdmin" method="post">
                            
                            <div class="alert alert-danger">
                                <p>شما نمی توانید پسورد و تفلن همرا کاربر را ویرایش کنید</p>
                            </div>
                            <div class="form-group">
                                <label>نام</label>
                                <input type="text" class="form-control" asp-for="FirstName">
                                <span class="text-danger" asp-validation-for="FirstName"></span>
                            </div>
                            <div class="form-group">
                                <label>نام خانوادگی</label>
                                <input type="text" class="form-control" asp-for="LastName">
                                <span class="text-danger" asp-validation-for="LastName"></span>
                            </div>

                            <div class="form-group">
                                <label>ایمیل</label>
                                <input type="email" class="form-control" asp-for="Email">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>



                            <button type="submit" class="btn btn-blue">ویرایش کاربر</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>