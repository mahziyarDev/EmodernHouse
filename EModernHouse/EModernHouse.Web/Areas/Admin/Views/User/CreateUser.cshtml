@using EModernHouse.DataLayer.Entities.Roles
@model EModernHouse.DataLayer.DTOs.Account.CreateUserDTO
@{
    ViewData["Title"] = "افزودن کاربر جدید";
    var Role = ViewBag.role as List<Roles>;
}

@section script
{
    <partial name="_JqueryValidator" />

}
<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            <div class="widget">
                <div class="widget-header bordered-bottom bordered-blue">
                    <span class="widget-caption">@TempData["Title"]</span>
                </div>
                <div class="widget-body">
                    <div>
                        <form role="form" asp-area="Admin" asp-controller="User" asp-action="CreateUser" method="post">
                            <div class="form-group">
                                <label>نام</label>
                                <input type="text" class="form-control" asp-for="FirstName">
                                <span class="text-danger" asp-validation-for="FirstName"></span>
                            </div>
                            <div class="form-group">
                                <label>نام خانوادگی</label>
                                <input type="text" class="form-control" asp-for="LastName">
                                <span class="text-danger" asp-validation-for="LastName"></span>
                            </div>

                            <div class="form-group">
                                <label>ایمیل</label>
                                <input type="email" class="form-control" asp-for="Email">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="form-group">
                                <label>موبایل</label>
                                <input type="text" class="form-control" asp-for="Mobile">
                                <span class="text-danger" asp-validation-for="Mobile"></span>
                            </div>
                            <div class="form-group">
                                <label>رمز عبور</label>
                                <input type="text" class="form-control" asp-for="Password">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>


                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        فعالسازی ایمیل
                                        <input type="checkbox" class="CkeckboxInput_createUser" name="@nameof(Model.IsMobileActive)" value="true">
                                    </label>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        فعالسازی موبایل
                                        <input type="checkbox" class="CkeckboxInput_createUser" name="@nameof(Model.IsMobileActive)" value="true">
                                    </label>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-blue">ثبت کاربر</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            <div class="widget-header">
                <span class="widget-caption">سطح دسترسی کاربر</span>
            </div>
            <div class="widget-body">
                @foreach (var role in Role)
                {
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                @role.Title
                                <input type="checkbox" class="CkeckboxInput_createUser" name="@nameof(Model.Roles)" value="@role.Id">
                            </label>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>