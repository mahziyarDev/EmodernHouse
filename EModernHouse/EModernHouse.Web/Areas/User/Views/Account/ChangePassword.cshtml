@model EModernHouse.DataLayer.DTOs.Account.ChangePasswordDTO
@{
    ViewData["Title"] = "تغییر رمز عبور";

}

@section scripts
{
    <partial name="_JqueryValidator" />
    
}

<main class="page-content" style="margin-top: 235.5px; transform: none;">
    <div class="container" style="transform: none;">
        <div class="row mb-5" style="transform: none;">
            <div class="col-lg-3 col-md-4 mb-md-0 mb-3 sticky-sidebar" style="position: relative; overflow: visible; box-sizing: border-box; min-height: 1px;">

                @await Component.InvokeAsync("UserSideBar")

            </div>
            <div class="col-lg-9 col-md-8">
                <div class="section-title mb-2">
                    @ViewData["Title"]
                </div>
                <div class="checkout-section shadow-around">
                    <div class="checkout-section-content">
                        <div class="row mx-0">
                            <form asp-area="User" asp-controller="Account" asp-action="ChangePassword" method="post" class="Form_User">
                               
                                <div class="form-element-row">
                                    <label for="phone-number" class="label-element">رمز عبور قبلی</label>
                                    <div class="form-element-with-icon">
                                        <input type="password" class="input-element" id="phone-number" asp-for="CurrentPassword">
                                        <i class="fad fa-key-skeleton"></i>
                                    </div>
                                    <span class="text-danger" asp-validation-for="CurrentPassword"></span>
                                </div>

                                <div class="form-element-row">
                                    <label for="phone-number" class="label-element">رمز عبور جدید</label>
                                    <div class="form-element-with-icon">
                                        <input type="password" class="input-element" id="phone-number" asp-for="NewPassword">
                                        <i class="fad fa-key-skeleton"></i>
                                    </div>
                                    <span class="text-danger" asp-validation-for="NewPassword"></span>
                                </div>

                                <div class="form-element-row">
                                    <label for="phone-number" class="label-element">تکرار رمز عبور جدید</label>
                                    <div class="form-element-with-icon">
                                        <input type="password" class="input-element" id="phone-number" asp-for="ConfirmPassword">
                                        <i class="fad fa-key-skeleton"></i>
                                    </div>
                                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                </div>
                                <div class="form-element-row">
                                    <input class="btn btn-info" type="submit" value="تغییر رمز عبور"/>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>